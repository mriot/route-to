{
    "manifest_version": 2,
    "name": "Route to ...",
    "version": "1.3.0",
    "description": "Adds a context menu option to open a route to the selected location in Google Maps.",
    "icons": {
        "16": "src/assets/icon.png",
        "32": "src/assets/icon.png",
        "48": "src/assets/icon.png",
        "128": "src/assets/icon.png",
        "256": "src/assets/icon.png",
        "512": "src/assets/icon.png"
    },
    "permissions": ["contextMenus", "storage"],
    "browser_action": {
        "default_popup": "src/popup.html"
    },
    "background": {
        "scripts": ["src/background.js"]
    },
    "browser_specific_settings": {
        "gecko": {
            "id": "{7b219e92-4fc4-4d4d-b45c-f15536046818}",
            "update_url": "https://riotcoding.com/addons/route-to/updates.json"
        }
    }
}
